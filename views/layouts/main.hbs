<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>ExpressTrade Trade Site</title>
		<link rel="stylesheet" href="css/bootstrap.min.css"/>
		<link rel="stylesheet" href="css/animate.min.css"/>
		<link rel="stylesheet" href="css/styles.css"/>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="#">
				<img src="images/ExpressTradeLogo.png" class="d-inline-block align-top mr-2" height="30px">
				Trade Site
			</a>

			<!-- Button to open hamburger menu when on mobile -->
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="nav-link" href="#">Trade <span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Article</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">GitHub</a>
					</li>
				</ul>

				
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						{{#if user}}
							<span class="navbar-text">Hey {{user.username}}!</span>
						{{else}}
							<a class="nav-link" href="/authentication">
								<img src="images/SteamLoginButton.png">
							</a>
						{{/if}}
					</li>

					{{#if user}}
						<li class="nav-item">
							<a class="nav-link" href="/authentication/logout">Logout</a>
						</li>
					{{/if}}
				</ul>
			</div>
		</nav>

		<!-- Load scripts here after the HTML elements has been rendered, usually the scripts take a while longer to load -->
		<script src="/js/jquery.min.js"></script>
		<script language="javascript" src="js/bootstrap.min.js"></script>
		<script src="/js/axios.min.js"></script>

		{{{body}}}
	</body>
</html>
